<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090D18"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- ðŸ”¹ User Profile Section -->
        <LinearLayout
            android:id="@+id/userProfileSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Profile Avatar with TextView -->
            <TextView
                android:id="@+id/tvProfileAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#7D55DD"
                android:gravity="center"
                android:text="U"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back,"
                    android:textColor="#8E92A3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ”¹ Workout Music Title -->
        <TextView
            android:id="@+id/tvWorkoutMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Workout Music"
            android:textColor="#7D55DD"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userProfileSection" />

        <!-- ðŸ”¹ Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Power your workouts with the perfect beats"
            android:textColor="#8E92A3"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvWorkoutMusic"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- ðŸ”¹ Album Art Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/albumArtCard"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#13102D"
            app:cardCornerRadius="32dp"
            app:cardElevation="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:strokeColor="#090D18">

            <ImageView
                android:id="@+id/ivAlbumArt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Album Art"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_music_white" />
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”¹ Song Info -->
        <TextView
            android:id="@+id/tvSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stronger"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/albumArtCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvArtistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelly Clarkson"
            android:textColor="#8E92A3"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvSongTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAlbumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My December"
            android:textColor="#8E92A3"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvArtistName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ðŸ”¹ SeekBar + Time -->
        <LinearLayout
            android:id="@+id/progressContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvAlbumName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="#6366F1"
                android:thumbTint="#6366F1"
                android:progressBackgroundTint="#2A2F3E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvCurrentTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0:00"
                    android:textColor="#8E92A3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="#8E92A3"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ”¹ Playback Controls -->
        <LinearLayout
            android:id="@+id/playbackControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/progressContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnShuffle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_shuffle"
                android:contentDescription="Shuffle"
                android:padding="8dp"
                app:tint="#8E92A3" />

            <ImageView
                android:id="@+id/btnPrevious"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_previous"
                android:contentDescription="Previous"
                android:padding="8dp"
                app:tint="#8E92A3" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="16dp"
                app:cardBackgroundColor="#694DF9"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                app:strokeColor="#090D18">

                <ImageView
                    android:id="@+id/btnPlayPause"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="Play Pause"
                    android:src="@drawable/ic_pause" />
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_next"
                android:contentDescription="Next"
                android:padding="8dp"
                app:tint="#8E92A3" />

            <ImageView
                android:id="@+id/btnRepeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_repeat"
                android:contentDescription="Repeat"
                android:padding="8dp"
                app:tint="#8E92A3" />
        </LinearLayout>

        <!-- ðŸ”¹ Bottom Controls -->
        <LinearLayout
            android:id="@+id/bottomControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/playbackControls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_heart"
                android:contentDescription="Like"
                android:padding="4dp"
                app:tint="#8E92A3" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnVolume"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_volume"
                    android:contentDescription="Volume"
                    android:padding="4dp"
                    app:tint="#8E92A3" />

                <SeekBar
                    android:id="@+id/volumeSeekBar"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:progressTint="#6366F1"
                    android:thumbTint="#6366F1"
                    android:progressBackgroundTint="#2A2F3E"
                    android:max="100"
                    android:progress="70" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>