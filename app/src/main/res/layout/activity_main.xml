<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090D18"
    android:fitsSystemWindows="true">

    <!-- Fragment Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavigationCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="#1A1F2E"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:strokeColor="#090D18"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Dashboard -->
            <LinearLayout
                android:id="@+id/navDashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <FrameLayout
                    android:id="@+id/dashboardIconContainer"
                    android:layout_width="68dp"
                    android:layout_height="68dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dashboardBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:cardBackgroundColor="#6A4DFC"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#090D18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iconDashboard"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Dashboard"
                            android:src="@drawable/ic_dashboard_white" />

                        <TextView
                            android:id="@+id/labelDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Dashboard"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Social -->
            <LinearLayout
                android:id="@+id/navSocial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <FrameLayout
                    android:id="@+id/socialIconContainer"
                    android:layout_width="48dp"
                    android:layout_height="68dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/socialBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:cardBackgroundColor="#6A4DFC"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#090D18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iconSocial"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Social"
                            android:src="@drawable/ic_social_white" />

                        <TextView
                            android:id="@+id/labelSocial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Social"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Routes -->
            <LinearLayout
                android:id="@+id/navRoutes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <FrameLayout
                    android:id="@+id/routesIconContainer"
                    android:layout_width="48dp"
                    android:layout_height="68dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/routesBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:cardBackgroundColor="#6A4DFC"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#090D18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iconRoutes"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Routes"
                            android:src="@drawable/ic_navigation_white" />

                        <TextView
                            android:id="@+id/labelRoutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Routes"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Music -->
            <LinearLayout
                android:id="@+id/navMusic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <FrameLayout
                    android:id="@+id/musicIconContainer"
                    android:layout_width="48dp"
                    android:layout_height="68dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/musicBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:cardBackgroundColor="#6A4DFC"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#090D18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iconMusic"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Music"
                            android:src="@drawable/ic_music_white" />

                        <TextView
                            android:id="@+id/labelMusic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Music"
                            android:textColor="#FEFEFE"
                            android:textSize="11sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>