<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_deep_dark_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Setup"
            android:textColor="@color/text_pure_white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Workout Type Spinner -->
        <Spinner
            android:id="@+id/activity_type"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/spinner_background2"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workout_title" />

        <!-- Goal Duration Input -->
        <EditText
            android:id="@+id/goal_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/progress_background_dark_blue"
            android:backgroundTint="@color/progress_background_dark_blue"
            android:hint="Goal Duration (HH:MM:SS)"
            android:inputType="time"
            android:padding="12dp"
            android:textColor="@color/text_pure_white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_type" />

        <!-- Intensity Spinner -->
        <Spinner
            android:id="@+id/intensity"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/spinner_background2"
            app:layout_constraintTop_toBottomOf="@id/goal_duration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Buttons Layout -->
        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/intensity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/start_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Start"
                android:backgroundTint="@color/accent_vibrant_purple"
                android:textColor="@color/text_pure_white" />

            <Button
                android:id="@+id/pause_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Pause"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/accent_vibrant_purple"
                android:textColor="@color/text_pure_white" />

            <Button
                android:id="@+id/resume_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Resume"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/accent_vibrant_purple"
                android:textColor="@color/text_pure_white" />

            <Button
                android:id="@+id/end_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="End"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/accent_vibrant_purple"
                android:textColor="@color/text_pure_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="00:00:00"
            android:textColor="@color/white"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttons_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
