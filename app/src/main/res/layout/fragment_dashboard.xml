<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_deep_dark_blue"
        tools:context=".DashboardFragment">

        <!-- Greeting and Subtitle -->
        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Morning, Alex!"
            android:textColor="@color/accent_vibrant_purple"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready to crush your fitness goals?"
            android:textColor="@color/text_pure_white"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/greeting" />

        <!-- Challenge Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/challenge_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/progress_background_dark_blue"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/outline_medium_purple_blue"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/challenge_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Challenge"
                    android:textColor="@color/accent_vibrant_purple"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walk 10,000 steps today and earn 50 XP"
                    android:textColor="@color/text_pure_white"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/challenge_title" />

                <Button
                    android:id="@+id/start_workout"
                    android:layout_width="149dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/accent_vibrant_purple"
                    android:padding="8dp"
                    android:text="Start Workout"
                    android:textColor="@color/text_pure_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/challenge_desc"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stats Grid -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/stats_grid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:columnCount="2"
            app:rowCount="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/challenge_card">

            <!-- Steps Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/progress_background_dark_blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_columnWeight="1"
                app:strokeColor="@color/outline_medium_purple_blue"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/steps_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_steps"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/steps_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8,547"
                        android:textColor="@color/text_pure_white"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/steps_icon"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/steps_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps Today"
                        android:textColor="@color/text_pure_white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/steps_value"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/steps_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/10,000"
                        android:textColor="@color/text_pure_white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/steps_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="85"
                        android:progressBackgroundTint="@color/progress_background_dark_blue"
                        android:progressTint="@color/accent_vibrant_purple"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/steps_label"
                        android:layout_marginTop="8dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Calories, Active Time, Weekly Progress cards omitted for brevity -->
            <!-- You can copy the same pattern as Steps Card with their respective IDs -->

        </androidx.gridlayout.widget.GridLayout>

        <!-- Recent Workouts -->
        <TextView
            android:id="@+id/recent_workouts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Workouts"
            android:textColor="@color/text_pure_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stats_grid" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent_workouts_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/recent_workouts_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_workout"
            tools:itemCount="3" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
