<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090D18"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Story"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Image Preview -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/storyImageContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:cardBackgroundColor="#1A1F2E"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivStoryPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Story preview" />

                <ImageButton
                    android:id="@+id/btnRemoveStoryImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:background="@drawable/circular_button_background"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:visibility="gone"
                    app:tint="#FFFFFF" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectStoryImage"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Add Photo"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                app:backgroundTint="#2A2F3E"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_image"
                app:iconGravity="textStart"
                app:iconTint="#7B68EE" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStoryFromWorkout"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="From Workout"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                app:backgroundTint="#2A2F3E"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_steps"
                app:iconGravity="textStart"
                app:iconTint="#7B68EE" />
        </LinearLayout>

        <!-- Caption -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption"
            android:textColor="#7B68EE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#1A1F2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="#2A2F3E"
            app:strokeWidth="1dp">

            <EditText
                android:id="@+id/etStoryCaption"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:gravity="top|start"
                android:hint="Share your moment... âœ¨"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#8E92A3"
                android:textSize="14sp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelStory"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                app:backgroundTint="#2A2F3E"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateStory"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Post Story"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                app:backgroundTint="#7B68EE"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBarStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:indeterminateTint="#7B68EE" />
    </LinearLayout>
</ScrollView>

