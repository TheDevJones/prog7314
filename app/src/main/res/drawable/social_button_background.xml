<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1F1F2E" /> <!-- darker on press -->
            <corners android:radius="15dp" />
            <stroke
                android:width="1dp"
                android:color="#475569FF" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#060A13" />
            <corners android:radius="15dp" />
            <stroke
                android:width="1dp"
                android:color="#475569FF" />
        </shape>
    </item>
</selector>
